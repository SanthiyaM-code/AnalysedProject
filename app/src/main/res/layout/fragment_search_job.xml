<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_search_job">

    <Spinner
        android:id="@+id/spinner32"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginTop="19dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="34dp"
        android:foreground="@drawable/background_black"/>

    <Spinner
        android:id="@+id/spinner33"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="34dp"
        android:foreground="@drawable/background_black"/>

    <Spinner
        android:id="@+id/spinner34"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginTop="27dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="34dp"
        android:foreground="@drawable/background_black"/>

    <EditText
        android:id="@+id/editTextTextPersonName42"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Number of Openings"
        android:layout_marginTop="27dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="34dp"
        android:paddingLeft="29dp"
        android:background="@drawable/background_black"/>

    <TextView
        android:id="@+id/textView121"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Skills"
       android:layout_marginTop="35dp"
        android:layout_marginStart="31dp"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_semibold"
        android:drawableRight="@drawable/add_icon"
        android:drawablePadding="6dp"/>

    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="5dp">

    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/textView122"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Company"
        android:layout_marginTop="22dp"
        android:layout_marginStart="31dp"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_semibold"
        android:drawableRight="@drawable/add_icon"
        android:drawablePadding="6dp"/>

    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="4dp">

    </com.google.android.material.chip.ChipGroup>
</LinearLayout>