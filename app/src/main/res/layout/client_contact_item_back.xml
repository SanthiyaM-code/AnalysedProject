<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="29dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="16dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/text_blue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageView26"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"

                android:layout_marginEnd="20dp"
                android:layout_marginTop="31dp"
                tools:srcCompat="@drawable/delete" />

            <TextView
                android:id="@+id/clicon_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/imageView"
                android:fontFamily="@font/nunito"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/clicon_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clicon_number"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/imageView"
                android:text="TextView"
                android:fontFamily="@font/nunito"
                android:textColor="@color/white"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/textView219"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clicon_email"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/imageView"
                android:fontFamily="@font/nunito"
                android:text="Added on"
                android:textColor="@color/white"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/clicon_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clicon_email"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/textView219"
                android:fontFamily="@font/nunito"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/path_s" />






        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>