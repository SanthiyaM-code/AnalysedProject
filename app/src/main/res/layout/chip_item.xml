<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.chip.Chip
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/item_chip"
    android:background="@drawable/chip_bg"
    app:chipStrokeColor="#3CA6DA"
    app:chipStrokeWidth="2dp"
    app:chipCornerRadius="5dp"
    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialComponents.Chip"
    android:padding="10dp"
    android:textSize="18dp"
    style="@style/Widget.MaterialComponents.Chip.Choice"
    android:layout_marginLeft="15dp"
    android:textColor="#3CA6DA"
    app:closeIconEnabled="true"
    app:chipMinHeight="38dp"
    app:closeIcon="@drawable/close_black_18dp"
    android:button="@android:color/transparent"
    app:chipBackgroundColor="@color/white">

</com.google.android.material.chip.Chip>